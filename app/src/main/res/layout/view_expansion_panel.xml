<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:orientation="vertical"
	tools:parentTag="android.widget.LinearLayout">

	<View
		android:id="@+id/divider"
		android:layout_width="match_parent"
		android:layout_height="1dp"
		android:visibility="gone"
		android:background="?android:attr/listDivider" />

	<org.nv95.openmanga.common.views.TintTextView
		android:id="@+id/textView_control"
		android:layout_width="match_parent"
		android:layout_height="42dp"
		android:background="?selectableItemBackground"
		android:drawableEnd="@drawable/ic_expand_black"
		android:drawableRight="@drawable/ic_expand_black"
		android:gravity="center_vertical"
		android:lines="1"
		android:paddingLeft="12dp"
		android:paddingRight="12dp"
		android:singleLine="true"
		android:tag="persistent"
		android:text="@string/show_more_details"
		android:textAllCaps="true"
		android:textAppearance="@style/Base.TextAppearance.AppCompat.Body1" />
</merge>